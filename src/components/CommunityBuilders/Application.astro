---
const cards = [
  {
    title: 'Fill up the application form',
    image: "/assets/form.svg",
    body: 'Make sure you write your  credentials correctly.',
    darkModeInvertColor: true
  },
  {
    title: 'Submit Video Resume',
    image: "/assets/video_resume.svg",
    body:'You will be asked to answer the questions in the video.',
    darkModeInvertColor: true
  },
  {
    title: 'Wait for the feedback',
    image: "/assets/feedback.svg",
    body: 'Wait for the email to know if you are accepted.',
    darkModeInvertColor: true

  },
]
---

<section class="p-lg my-lg">
  <h3 class="font-bold font-title text-title text-center">Application Process</h3>
  <div class="grid grid-cols-3 gap-md flex-wrap justify-evenly py-lg">
    {cards.map(card => (
      <div class="space-y-sm col-span-3 medium:col-span-1 flex flex-col items-center content-between text-center">
        <div class="flex flex-row justify-center">
          <img alt={card.title} src={card.image} class="w-[50px] h-auto mb-xs dark:invert" />
        </div>
        <h3 class="font-bold text-subtitle font-subtitle">{card.title}</h3>
        <p>{card.body}</p>
      </div>
    ))}
  </div>
</section>
